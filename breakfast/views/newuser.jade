extends layout

block content
    h1 Add New Breakfast:
    form#formAddUser(name="adduser",method="post",action="/adduser")
        input#inputUserBreakfast(type="text", placeholder="breakfast", name="breakfast")
        input#inputUserRating(type="text", placeholder="rating", name="rating")
        button#btnSubmit(type="submit") submit
    h1  Update Breakfast
    form#formUpdateUser(name="updateuser",method="post",action="/updateuser")
        input#inputUserId(type="text", placeholder="breakfast to update", name="breakfast")
        input#inputUserRating(type="text", placeholder="rating", name="rating")
        button#btnSubmit(type="submit") submit
    h1  Delete Breakfast
    form#formUpdateUser(name="deleteuser",method="post",action="/deleteuser")
        input#inputUserId(type="text", placeholder="breakfast to be deleted", name="breakfast")
        input#inputUserRating(type="text", placeholder="rating", name="rating")
        button#btnSubmit(type="submit") submit
